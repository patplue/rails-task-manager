<h1>Task List</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task)  %>
        <% if task.completed %>
          <input type="checkbox" checked>
        <% else %>
          <input type="checkbox">
        <% end %>
        <%= link_to "Delete task", task_path(task), method: :delete   %>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
